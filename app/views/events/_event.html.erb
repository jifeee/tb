<tr>
  <td><%= image_tag "icons/on.png", :width => 15, :height => 16, :alt => "on" %></td>
  <td><%= event.time.strftime '%c'%></td>
  <td>
    <div class="status">
      <div class="whos">
        <%= link_to(event.device.display_name, edit_textbuster_path(event.device)) if event.device && can?(:update, event.device) %>
      </div>
    </div>
  </td>
  <td>
    <div class="ttl"><%= event.phone.user.name %></div>
    <div class="device">
      <%= link_to(event.phone.name_with_imei, edit_phone_path(event.phone)) if event.phone && can?(:update, event.phone) %>
    </div>
  </td>
  <td>
    <%= "#{event.gps_state.to_s.humanize}, #{event.bt_state.to_s.humanize}, locked:#{event.locked.to_s.humanize}" %>
    <%= event.alert_histories.first.alert.conditions if event.alert_histories.any? %>
  </td>
</tr>

