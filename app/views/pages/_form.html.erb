<%= include_tiny_mce_if_needed %>

<%= semantic_form_for [:admin, @page] do |f| %>
  <%= f.inputs "Static page" do %>
    <%= f.input :title %>
    <%= f.input :menu_logged_in, :label => "Should appear in main menu, when logged in" %>
    <%= f.input :menu_logged_out, :label => "Should appear in main menu, when logged out" %>
    <%= f.input :menu_footer, :label => "Should appear in bottom menu" %>
    <%= f.input :menu_main, :label => "Should appear in main menu" %>
    <%= f.input :data, :input_html => {:class => "mceEditor"} %>
  <% end %>
  <%= f.buttons :commit %>
<% end %>

